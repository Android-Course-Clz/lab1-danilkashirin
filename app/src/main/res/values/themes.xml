        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>

        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.TitleLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.BodyMedium</item>

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Medium</item>
